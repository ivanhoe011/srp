.overlay {
	display:none;
        position: relative;
        top:50%;
	z-index:10000;
        color:#fff;
	/*background-color:#555;*/
	background-image:url(../images/overlay/ts_back.png);
	min-width:400px;
	min-height:200px;
	border:1px solid #666;
        width: auto;
        height: auto;
        padding-bottom: 5px;
	/*-moz-box-shadow:0 0 90px 5px #000;
        -moz-box-shadow:0 0 90px 5px #000;
	-webkit-box-shadow: 0 0 90px #000;*/
}
.overlay .close {
	background-image:url(../images/overlay/close.png);
	position:absolute;
	right:-15px;
	top:-15px;
	cursor:pointer;
	height:35px;
	width:35px;
}
