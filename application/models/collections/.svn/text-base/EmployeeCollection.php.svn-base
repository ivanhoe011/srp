    {
        $array = array();
        while ($this->valid())
        {
            $employee = $this->read();
            $this->parser->changeBean($employee);
            $array += $this->parser->toKeyValueArray($ckey, $cvalue);
        }
        $this->rewind();
        return $array;
    }
    
    /**
