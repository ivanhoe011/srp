class EmployeeCollection extends ArrayIterator
{

    /**
     * @var Parser
     */
    private $parser;
    
    /**
     * Constructor
     * @param array $array
     * @return void
     */
    public function __construct($array = array())
    {
        $this->parser = new Parser('Employee');
        parent::__construct($array);
    }

    /**
     * Appends the value
     * @param Employee $employee
     */
    public function append($employee)
    {
        parent::offsetSet($employee->getIdEmployee(), $employee);
        $this->rewind();
    }

    /**
     * Return current array entry
     * @return Employee
     */
    public function current()
    {
        return parent::current();
    }

    /**
     * Return current array entry and 
     * move to next entry
     * @return Employee 
     */
    public function read()
    {
        $employee = $this->current();
        $this->next();
        return $employee;
    }

    /**
     * Get the first array entry
     * if exists or null if not 
     * @return Employee|null 
     */
    public function getOne()
    {
        if ($this->count() > 0)
        {
            $this->seek(0);
            return $this->current();
        } else
            return null;
    }
    
    /**
     * Contains one object with $idEmployee
     * @param  int $idEmployee
     * @return boolean
     */
    public function contains($idEmployee)
    {
        return parent::offsetExists($idEmployee);
    }
    
    /**
     * Remove one object with $idEmployee
     * @param  int $idEmployee
     */
    public function remove($idEmployee)
    {
        if( $this->contains($idEmployee) )
            $this->offsetUnset($idEmployee);
    }
    
    /**
     * Merge two Collections
     * @param EmployeeCollection $employeeCollection
     * @return void
     */
    public function merge(EmployeeCollection $employeeCollection)
    {
        $employeeCollection->rewind();
        while($employeeCollection->valid())
        {
            $employee = $employeeCollection->read();
            if( !$this->contains( $employee->getIdEmployee() ) )
                $this->append($employee);
        }
        $employeeCollection->rewind();
    }
    
    /**
     * Diff two Collections
     * @param EmployeeCollection $employeeCollection
     * @return void
     */
    public function diff(EmployeeCollection $employeeCollection)
    {
        $employeeCollection->rewind();
        while($employeeCollection->valid())
        {
            $employee = $employeeCollection->read();
            if( $this->contains( $employee->getIdEmployee() ) )
                $this->remove($employee->getIdEmployee());     
        }
        $employeeCollection->rewind();
    }
    
    /**
     * Intersect two Collections
     * @param EmployeeCollection $employeeCollection
     * @return EmployeeCollection
     */
    public function intersect(EmployeeCollection $employeeCollection)
    {
        $newemployeeCollection = EmployeeCollection();
        $employeeCollection->rewind();
        while($employeeCollection->valid())
        {
            $employee = $employeeCollection->read();
            if( $this->contains( $employee->getIdEmployee() ) )
                $newemployeeCollection->append($employee);
        }
        $employeeCollection->rewind();
        return $newemployeeCollection;
    }
    
    /**
