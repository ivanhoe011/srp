class DepartmentCollection extends ArrayIterator
{

    /**
     * @var Parser
     */
    private $parser;
    
    /**
     * Constructor
     * @param array $array
     * @return void
     */
    public function __construct($array = array())
    {
        $this->parser = new Parser('Department');
        parent::__construct($array);
    }

    /**
     * Appends the value
     * @param Department $department
     */
    public function append($department)
    {
        parent::offsetSet($department->getIdDepartment(), $department);
        $this->rewind();
    }

    /**
     * Return current array entry
     * @return Department
     */
    public function current()
    {
        return parent::current();
    }

    /**
     * Return current array entry and 
     * move to next entry
     * @return Department 
     */
    public function read()
    {
        $department = $this->current();
        $this->next();
        return $department;
    }

    /**
     * Get the first array entry
     * if exists or null if not 
     * @return Department|null 
     */
    public function getOne()
    {
        if ($this->count() > 0)
        {
            $this->seek(0);
            return $this->current();
        } else
            return null;
    }
    
    /**
     * Contains one object with $idDepartment
     * @param  int $idDepartment
     * @return boolean
     */
    public function contains($idDepartment)
    {
        return parent::offsetExists($idDepartment);
    }
    
    /**
     * Remove one object with $idDepartment
     * @param  int $idDepartment
     */
    public function remove($idDepartment)
    {
        if( $this->contains($idDepartment) )
            $this->offsetUnset($idDepartment);
    }
    
    /**
     * Merge two Collections
     * @param DepartmentCollection $departmentCollection
     * @return void
     */
    public function merge(DepartmentCollection $departmentCollection)
    {
        $departmentCollection->rewind();
        while($departmentCollection->valid())
        {
            $department = $departmentCollection->read();
            if( !$this->contains( $department->getIdDepartment() ) )
                $this->append($department);
        }
        $departmentCollection->rewind();
    }
    
    /**
     * Diff two Collections
     * @param DepartmentCollection $departmentCollection
     * @return void
     */
    public function diff(DepartmentCollection $departmentCollection)
    {
        $departmentCollection->rewind();
        while($departmentCollection->valid())
        {
            $department = $departmentCollection->read();
            if( $this->contains( $department->getIdDepartment() ) )
                $this->remove($department->getIdDepartment());     
        }
        $departmentCollection->rewind();
    }
    
    /**
     * Intersect two Collections
     * @param DepartmentCollection $departmentCollection
     * @return DepartmentCollection
     */
    public function intersect(DepartmentCollection $departmentCollection)
    {
        $newdepartmentCollection = DepartmentCollection();
        $departmentCollection->rewind();
        while($departmentCollection->valid())
        {
            $department = $departmentCollection->read();
            if( $this->contains( $department->getIdDepartment() ) )
                $newdepartmentCollection->append($department);
        }
        $departmentCollection->rewind();
        return $newdepartmentCollection;
    }
    
    /**
     * Retrieve the array with primary keys 
     * @return array
     */
    public function getPrimaryKeys()
    {
        return array_keys($this->getArrayCopy());
    }
    
    /**
     * Retrieve the Department with primary key  
     * @param  int $idDepartment
     * @return Department
     */
    public function getByPK($idDepartment)
    {
        return $this->contains($idDepartment) ? $this[$idDepartment] : null;
    }
  
    /**
     * Transforma una collection a un array
     * @return array
     */
    public function toArray()
    {
        $array = array();
        while ($this->valid())
        {
            $department = $this->read();
            $this->parser->changeBean($department);
            $array[$department->getIdDepartment()] = $this->parser->toArray();
        }
        $this->rewind();
        return $array;
    }
    
    /**
     * Crea un array asociativo de $key => $value a partir de las constantes de un bean
     * @param string $ckey
     * @param string $cvalue
     * @return array
     */
    public function toKeyValueArray($ckey, $cvalue)
    {
        $array = array();
        while ($this->valid())
        {
            $department = $this->read();
            $this->parser->changeBean($department);
            $array += $this->parser->toKeyValueArray($ckey, $cvalue);
        }
        $this->rewind();
        return $array;
    }
    
    /**
     * Retrieve the parser object
     * @return Parser
     */
    public function getParser()
    {
        return $this->parser;
    }
    
    /**
     * Is Empty
     * @return boolean
     */
    public function isEmpty()
    {
        return $this->count() == 0;
    }
  
  
}

